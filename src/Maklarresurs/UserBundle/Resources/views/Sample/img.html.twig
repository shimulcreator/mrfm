{% extends 'MaklarresursUserBundle::layout.html.twig' %}

{% block title %}Dashboard{% endblock %}



{% block body %}
    <style>
        input[type="file"] {
            width: 320px;
            height: 35px;
            border: 1px solid #BBB;
            /*border-right: 0;*/
            color: #888;
            padding: 5px;

            -webkit-border-top-left-radius: 5px;
            -webkit-border-bottom-left-radius: 5px;
            -moz-border-radius-topleft: 5px;
            -moz-border-radius-bottomleft: 5px;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;

            outline: none;
        }
        .upload{
            height: 34px;
            margin-left: -4px;
            margin-top: 2px;
            border-top-right-radius: 3px;
            border-bottom-right-radius: 3px;
            background-color: #914DCF;
            color: white;
            font-size: 15px;
            font-weight: bold;
            border: none;
        }
        form{
            margin-bottom: 20px;
        }
    </style>
    <h3 class="box-header">DASHBOARD</h3>
    <div class="box">
        <div class="row-fluid" style="margin-bottom: 20px">
            <form class="form-horizontal" action="{{ path('sample_file_uploads_create', {'id': lappningId}) }}" method="post" {{ form_enctype(form) }}>
                <div class="form-group">
                    <label class="control-label">Upload File : </label>
                    <div class="controls">
                        {{ form_widget(form.image) }}
                        {{ form_widget(form._token) }}
                    </div>
                </div>

                <div class="form-actions">
                    <input type="submit" value="NEXT" class="btn btn-dark-red">
                </div>


            </form>


        </div>

    </div>



{% endblock %}

